@inject CultureState CultureState
@using Brewery.Web.States
@implements IDisposable

<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@Title</strong>

    <span class="text-nowrap">
        Please take our
        <a target="_blank" class="font-weight-bold link-dark" href="https://go.microsoft.com/fwlink/?linkid=2186157">brief survey</a>
    </span>
    and tell us what you think.
    @CultureState.Search
</div>

@code {
    // Demonstrates how a parent component can supply parameters
    [Parameter]
    public string Title { get; set; }

    #region Listener state change

    protected override void OnInitialized()
    {
        CultureState.OnChange += OnChangeHandler;
    }

    public void Dispose()
    {
        CultureState.OnChange -= OnChangeHandler;
        CultureState.PropertyChanged -= CultureState.SetComputedProps;
    }
  
    private async void OnChangeHandler()
    {
        await InvokeAsync(StateHasChanged);
    }

    #endregion
}