
<div class="d-flex">
    <div class="d-flex align-items-center me-2">
        <label class="form-label me-2">Nombre de résultat: </label>
        <select @bind="Take" class="form-control w-50px" >
            @foreach (var take in Takes)
            {
                <option value="@take"> @take</option>
            }
        </select>
    </div>
    
     <div class="d-flex align-items-center">
        <label class="form-label me-2">Page: </label>
        <select @bind="Skip" class="form-control w-50px" >
            @foreach (var skip in Skips)
            {
                <option value="@skip"> @skip</option>
            }
        </select>
    </div>
</div>




@code {

    public List<int> Skips { get; set; }
    public int Skip { get; set; }
    public int Take { get; set; }
    public List<int> Takes { get; set; }

    protected override void OnInitialized()
    {
        Takes = new List<int>()
        {
            5, 10, 20, 30, 50, 100, 500
        };

        var l = new List<int>();
        for (int i = 1; i < 10; i++)
        {
            l.Add(i);
        }

        Skips = l;
    }

}

