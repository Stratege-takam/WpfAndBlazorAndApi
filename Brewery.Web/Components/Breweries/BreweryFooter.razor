@using Brewery.Web.Helpers.States

@if (State != null)
{
    <EditForm Model="State" class="d-flex">
        <div class="d-flex align-items-center me-2">
            <label class="form-label me-2">Nombre de résultat: </label>
            <select @bind="State.Take" class="form-control w-50px">
                @if (State.Takes != null)
                {
                    foreach (var take in State.Takes)
                    {
                        <option value="@take"> @take</option>
                    }
                }
            </select>
        </div>

        <div class="d-flex align-items-center">
            <label class="form-label me-2">Page: </label>
            <select @bind="State.Skip" class="form-control w-50px">
                @if (State.Skips != null)
                {
                    foreach (var skip in State.Skips)
                    {
                        <option value="@skip"> @skip</option>
                    }
                }
               
            </select>
        </div>
    </EditForm>
}




@code {

    private BreweryState _state;
    
    [Parameter]
    public BreweryState State { 
        get => _state;
        set
        {
            if (_state != value)
            {
                _state = value;
                StateChanged.InvokeAsync(value);
            }
        } 
    }
    
    [Parameter]
    public EventCallback<BreweryState> StateChanged { get; set; }

}

